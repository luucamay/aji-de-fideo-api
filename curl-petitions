curl -X GET "http://localhost:3000/products/"
curl -X GET "http://localhost:3000/products/ID"
curl -d '{"name": "chairo", "price": "2050", "type": "main dish"}' -H "Content-Type: application/json" -X POST http://localhost:3000/products/
curl -X PUT -H "Content-Type: application/json" -d '{"price": 18500}' http://localhost:3000/products/ID
curl -X DELETE "http://localhost:3000/products/ID/"

## Authentication
curl -d '{"email": "lilo@lilo.com", "password": "esunsecreto"}' -H "Content-Type: application/json" -X POST http://localhost:3000/auth/
curl -d '{"email": "lu@lu.com", "password": "noesunsecreto"}' -H "Content-Type: application/json" -X POST http://localhost:3000/auth/

## Send toke of authorization in request object
curl -H "Authorization: Bearer ${TOKEN}" http://localhost:3000

## Users CRUD petitions
curl -X GET "http://localhost:3000/users/" -H "Authorization: Bearer ${TOKEN}"
curl -X GET "http://localhost:3000/users/${id}" -H "Authorization: Bearer ${TOKEN}"
curl -X POST http://localhost:3000/users/ -H "Authorization: Bearer ${TOKEN}" -H "Content-Type: application/json" -d '{"email": "chairo", "password": "2050"}'
curl -X PUT http://localhost:3000/users/ID -H "Authorization: Bearer ${TOKEN}" -H "Content-Type: application/json" -d '{"password": 18500}'
curl -X DELETE http://localhost:3000/users/ID/ -H "Authorization: Bearer ${TOKEN}" -H "Content-Type: application/json"